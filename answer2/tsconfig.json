{
  "name": "Weather Forecast Api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "outDir": "./build",
    "baseUrl": "./src",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "downlevelIteration": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts", "src/public", "**/*.test.es"]
}
